@using booksite.Models
@model Book
@{
    ViewData["Title"] = Model?.Title ?? "Книга";
}

<div class="content-wrapper">
    @if (Model != null)
    {
        <div class="row">
            <div class="col-md-4">
                <div class="mb-4">
                    <img src="@Url.Content(Model.ImageUrl)"
                         alt="@Model.Title"
                         class="img-fluid rounded"
                         style="width: 100%; max-height: 300px; object-fit: contain;"
                         onerror="this.onerror=null; this.src='@Url.Content("~/images/default-book.jpg")'">
                </div>

                @if (Model.IsBestseller || Model.IsFeatured)
                {
                    <div class="d-flex gap-2 mb-4">
                        @if (Model.IsBestseller)
                        {
                            <span class="badge bg-danger">Бестселлер</span>
                        }
                        @if (Model.IsFeatured)
                        {
                            <span class="badge bg-primary">Рекомендуем</span>
                        }
                    </div>
                }
            </div>

            <div class="col-md-8">
                <h1 class="mb-3">@Model.Title</h1>
                <h4 class="text-muted mb-4">@Model.Author</h4>

                <div class="book-description mb-4">
                    <h4>Описание</h4>
                    <p class="description-content">@Model.Description</p>
                </div>

                <div class="mb-4">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="detail-item">
                                <div class="detail-label">Год издания</div>
                                <div class="detail-value">@Model.Year</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="detail-item">
                                <div class="detail-label">Страниц</div>
                                <div class="detail-value">@Model.Pages</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="detail-item">
                                <div class="detail-label">Категория</div>
                                <div class="detail-value">@Model.Category</div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="book-price-display mb-4">
                    <div class="price-label">Цена</div>
                    <div class="price-value">@Model.Price ₽</div>
                </div>

                <div class="d-flex flex-column" style="max-width: 300px;">
                    <a href="/Home/Catalog" class="btn btn-primary btn-lg mb-2">
                        <i class="fas fa-arrow-left me-2"></i>Назад в каталог
                    </a>
                    <button onclick="addToCart(@Model.Id)" class="btn btn-primary btn-lg">
                        <i class="fas fa-shopping-cart me-2"></i>Добавить в корзину
                    </button>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <h3>Книга не найдена</h3>
            <p class="text-muted">Запрашиваемая книга не существует</p>
            <a href="/Home/Catalog" class="btn btn-primary">Перейти в каталог</a>
        </div>
    }
</div>

<script>
    function addToCart(bookId) {
        showNotification('Книга #' + bookId + ' добавлена в корзину (демо)', 'success');
    }
</script>
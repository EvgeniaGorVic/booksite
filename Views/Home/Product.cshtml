@using booksite.Models
@model Book
@{
    ViewData["Title"] = Model?.Title ?? "Книга";
}

<div class="content-wrapper">
    @if (Model != null)
    {
        <div class="book-detail-container">
            <!-- Изображение книги (УМЕНЬШЕНО ДО 200px) -->
            <div class="book-detail-image">
                <img src="@Url.Content(Model.ImageUrl)"
                     alt="@Model.Title"
                     onerror="this.onerror=null; this.src='@Url.Content("~/images/default-book.jpg")'">

                @if (Model.IsBestseller || Model.IsFeatured)
                {
                    <div class="book-badges">
                        @if (Model.IsBestseller)
                        {
                            <span class="badge bg-danger">Бестселлер</span>
                        }
                        @if (Model.IsFeatured)
                        {
                            <span class="badge bg-primary">Рекомендуем</span>
                        }
                    </div>
                }
            </div>

            <!-- Информация о книге -->
            <div class="book-detail-info">
                <h1 class="mb-2">@Model.Title</h1>
                <h4 class="text-muted mb-4">@Model.Author</h4>

                <!-- БЛОК ОПИСАНИЯ С ЦВЕТНЫМ ФОНОМ -->
                <div class="book-description-block">
                    <h4>Описание книги</h4>
                    <p>@Model.Description</p>
                </div>

                <!-- Мета-информация -->
                <div class="book-meta-info">
                    <div class="meta-item">
                        <span class="meta-label">Год издания</span>
                        <span class="meta-value">@Model.Year</span>
                    </div>
                    <div class="meta-item">
                        <span class="meta-label">Страниц</span>
                        <span class="meta-value">@Model.Pages</span>
                    </div>
                    <div class="meta-item">
                        <span class="meta-label">Категория</span>
                        <span class="meta-value">@Model.Category</span>
                    </div>
                </div>

                <!-- Цена и рейтинг -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="book-price h2 text-primary mb-0">@Model.Price ₽</div>
                    <div class="book-rating">
                        @for (int i = 0; i < 5; i++)
                        {
                            <span class="star fs-4">@(i < (int)Model.Rating ? "★" : "☆")</span>
                        }
                        <span class="rating-value ms-2 fs-5">@Model.Rating.ToString("0.0")</span>
                    </div>
                </div>

                <!-- Кнопки -->
                <div class="book-detail-actions">
                    <a href="/Home/Catalog" class="btn btn-primary">
                        <i class="fas fa-arrow-left me-2"></i>Назад в каталог
                    </a>
                    <button onclick="addToCart(@Model.Id)" class="btn btn-primary">
                        <i class="fas fa-shopping-cart me-2"></i>Добавить в корзину
                    </button>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <h3>Книга не найдена</h3>
            <p class="text-muted">Запрашиваемая книга не существует</p>
            <a href="/Home/Catalog" class="btn btn-primary">Перейти в каталог</a>
        </div>
    }
</div>

<script>
    function addToCart(bookId) {
        showNotification('Книга #' + bookId + ' добавлена в корзину (демо)', 'success');
    }
</script>
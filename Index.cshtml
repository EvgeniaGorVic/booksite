@model IEnumerable<BookStore.Models.Book>
    <link rel="stylesheet" href="~/css/style.css">
    <script src="~/js/site.js"></script>

    <header class="header">
        <img src="~/images/logo.png" class="logo" />
        <nav>
            <a href="/">Главная</a>
            <a href="/Home/Catalog">Каталог</a>
            <a href="/Home/Contacts">Контакты</a>
            <a href="/Account/Login">Войти</a>
        </nav>
    </header>

    <section class="hero">
        <h1>Добро пожаловать в BookStore!</h1>
        <p>Лучшие книги для вашего обучения и досуга</p>
    </section>

    <section class="books-grid">
        @foreach (var book in Model)
        {
            <div class="book-card">
                <img src="@book.ImageUrl" />
                <h3>@book.Title</h3>
                <p>@book.Author</p>
                <p>@book.Price ₽</p>
                <a href="/Home/Book/@book.Id">Подробнее</a>
            </div>
        }
    </section>

    <footer class="footer">© BookStore, 2026</footer>
